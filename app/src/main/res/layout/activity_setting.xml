<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2dddd"
    >

    <com.finalczz.playtogether.utils.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.finalczz.playtogether.utils.TitleLayout>

    <LinearLayout
        android:background="#f9f6f6"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_setting_zh"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@mipmap/zhanghao"
                />

            <TextView
                android:text="账号管理"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_usually"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                />

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginLeft="200dp"
                android:src="@mipmap/back"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#a5a4a4"
            >
        </View>
        <LinearLayout
            android:id="@+id/ll_setting_gengxin"
            android:layout_marginTop="1px"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@mipmap/gengxin"
                />

            <TextView
                android:text="检查更新"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_usually"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                />

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginLeft="200dp"
                android:src="@mipmap/back"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#a5a4a4"
            >
        </View>
        <LinearLayout
            android:id="@+id/ll_setting_exit"
            android:layout_marginTop="1px"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@mipmap/exit"
                />

            <TextView
                android:text="退出"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_usually"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                />

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginLeft="200dp"
                android:src="@mipmap/back"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
